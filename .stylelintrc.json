{
  "extends": [
    "stylelint-config-sass-guidelines",
    "stylelint-prettier/recommended"
  ],
  "plugins": [
    "stylelint-order",
    "stylelint-prettier",
    "stylelint-scss"
  ],
  "rules": {
    "no-descending-specificity": true,
    "max-nesting-depth": [
      3,
      {
        "ignore": [
          "blockless-at-rules",
          "pseudo-classes"
        ]
      }
    ],
    "prettier/prettier": true
  },
  "ignoreFiles": [
    ".bundle/**",
    "node_modules/**",
    "public/packs*/**",
    "tmp/**",
    "vendor/bundle/**"
  ]
}